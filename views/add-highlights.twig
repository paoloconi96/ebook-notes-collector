{% extends 'layout.twig' %}

{% block stylesheets %}
    <link rel='stylesheet' href='/stylesheets/add.css'/>
{% endblock %}

{% block main_actions %}
    <a href="/">(Homepage)</a>
{% endblock %}

{% block body %}
    <form action="/add-highlights" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>File CSV</label>
            <input type="file" id="file" name="file" value="{{ files }}"
            {% if draftBookId %}hidden{% endif %}>
            <small>File must be in a compatible Kindle format.</small>
        </div>
        <div class="form-group">
            <label>Language</label>
            <select id="language" name="language" required>
                <option value="it">Italian</option>
                <option value="en">English</option>
            </select>
        </div>
        <input type="hidden" name="draftBookId" value="{{ draftBookId }}">
        <div class="form-group">
            <input type="submit" value="Submit">
        </div>

        {% for book in books %}
            <input type="radio" name="book" id="book-{{ book.isbn13 }}" value="{{ book.isbn13 }}" hidden />
            <label for="book-{{ book.isbn13 }}" class="card">
                <span class="card-heading">
                    <strong>
                        {{ book.title }} -
                        {% for author in book.authors %}
                            {{ author }} {% if index.last %},{% endif %}
                        {% endfor %}
                        ({{ book.publishedDate }})
                    </strong>
                    <span>ISBN: {{ book.isbn13 }}</span>
                </span>
                <em><a href="{{ book.link }}">Link</a></em>
            </label>
        {% endfor %}
    </form>
{% endblock %}
