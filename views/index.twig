{% extends 'layout.twig' %}

{% block stylesheets %}
    <link rel='stylesheet' href='/stylesheets/index.css'/>
{% endblock %}

{% block main_actions %}
    <a href="/add">(Upload new book)</a>
{% endblock %}

{% block body %}
    <ul class="books">
        {% for book in books %}
            <li class="book" id="book-{{ book.id }}">
                <a href="/detail/{{ book.id }}">
                    {% if book.imageLinks %}
                        <img src="{{ book.imageLinks }}" alt="Cover" class="cover">
                    {% endif %}
                    <strong>{{ book.title }}</strong> â€¢ <span>{{ book.authors }}</span>
                </a>
            </li>
        {% endfor %}

        {% if books | length < 8 %}
            {% for fake in range(0, 8 - books | length) %}
                <li class="book" id="book-{{ book.id }}"></li>
            {% endfor %}
        {% endif %}
    </ul>
{% endblock %}
